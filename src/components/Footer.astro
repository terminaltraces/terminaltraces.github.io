---
import SocialIcon from './SocialIcon.astro';
import { siteConfig, footerLinks, socialLinks } from '../config/site.js';

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-gray-200 dark:border-gray-800 bg-white/50 dark:bg-gray-900/50 backdrop-blur-sm mt-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Brand -->
      <div>
        <h3 class="text-xl font-bold gradient-text mb-2">{siteConfig.branding}</h3>
        <p class="text-gray-600 dark:text-gray-400">
          {siteConfig.tagline}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {footerLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 dark:text-gray-400 hover:text-galaxy-600 dark:hover:text-galaxy-300 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h4 class="font-semibold text-gray-900 dark:text-gray-100 mb-4">Connect</h4>
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <SocialIcon icon={social.icon} url={social.url} name={social.name} />
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-200 dark:border-gray-800 pt-8 text-center text-gray-600 dark:text-gray-400">
      <p>&copy; {currentYear} terminaltraces. All rights reserved. Built with Astro & React.</p>
    </div>
  </div>
</footer>
